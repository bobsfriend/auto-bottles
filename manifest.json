{
	"manifest_version": 2,

	"name": "Auto Bottles",
	"description": "Automatically get bottles in Ocean Hero",
	"browser_action": {
		"default_popup": "popup.html"
	},
	"permissions": ["tabs"],
	"version": "1",

	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"js": ["content.js"]
		}
	],

	"background": {
		"scripts": ["background.js"],
		"persistent": false
	}
}
